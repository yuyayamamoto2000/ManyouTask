<h1>管理者画面</h1>
<h4>プロフィールは次のとおりです</h4>
<p>名前：<%= @user.name %></p>
<p>メールアドレス：<%= @user.email %></p>

<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タスク名</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>優先順位</th>
    <th>ステータス</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td class="task_row"><%= task.title %></td>
      <td class="task_row"><%= task.content %></td>
      <td class="task_expired"><%= task.time_limit %></td>
      <td class="form-control"><%= task.to_do %></td>
      <td class="task_priority"><%= task.priority %></td>
    </tr>
  <% end %>
</table>
<a><%= link_to '[userを削除する]', admin_user_path(@user.id), method: :delete %></a>
