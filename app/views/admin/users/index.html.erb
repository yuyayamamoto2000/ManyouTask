<div class="contents">
  <table>
    <tr>
      <th>ユーザーid</th>
      <th>名前</th>
      <th>メール</th>
      <th>アドミン</th>
    </tr>
    <% @users.each do |user| %>
    <tr class='user_list'>
      <td class="user_id"><%= user.id %></td>
      <td class="user_name"><%= user.name %></td>
      <td class="user_email"><%= user.email %></td>
      <td><%= user.admin %></td>
      <td class="user_length"><%= user.tasks.length %></td>
      <td><%= link_to "詳細を確認する。", admin_user_path(user.id) %></td>
      <td><%= link_to "ユーザー編集する", edit_admin_user_path(user.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to "ユーザー削除", admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
    <% end %>
  </table>
</div>
<%= link_to '新しくユーザーを追加する', new_admin_user_path %>
